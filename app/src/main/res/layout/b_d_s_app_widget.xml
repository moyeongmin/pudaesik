<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/appwidget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:gravity="start|center_vertical"
            android:text="@string/app_widget_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/appwidget_menu_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:gravity="start|center_vertical"
            android:text="@string/app_widget_menu_type"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </GridLayout>

    <TextView
        android:id="@+id/appwidget_menu_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:text="@string/app_widget_menu_detail"
        android:textSize="12sp"
        android:maxLines="3"
        android:ellipsize="end" />
</LinearLayout>
